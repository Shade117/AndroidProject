<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.kelro.bit_services">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/bitlogo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ContractorHome">
        </activity>
        <activity android:name=".ContractorAssignement">
        </activity>
        <activity android:name=".Unavailabilty">
        </activity>
        <activity android:name=".TaskDetails">
        </activity>
        <activity android:name=".Compete">
        </activity>

        <service
                android:name=".NotifyService"
                android:enabled="true"
                android:exported="true">
        </service>
    </application>

</manifest>