<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername"
            app:layout_constraintStart_toStartOf="@+id/txtUsername"
            android:hint="Password" app:layout_constraintEnd_toEndOf="@+id/txtUsername"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Username" android:layout_marginTop="204dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:id="@+id/btnLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            app:layout_constraintStart_toStartOf="@+id/txtPassword"
            app:layout_constraintEnd_toEndOf="@+id/txtPassword"/>
</android.support.constraint.ConstraintLayout>