<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TaskDetails">

    <TextView
            android:text="Address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblAddres"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/txtContact"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtContact"/>
    <TextView
            android:text="End Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEndTime" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txtStartTime"
            app:layout_constraintTop_toBottomOf="@+id/txtStartTime" android:textSize="14sp"/>
    <TextView
            android:text="Start Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtStartTime" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txtDate"
            app:layout_constraintTop_toBottomOf="@+id/txtDate" android:textSize="14sp"/>
    <TextView
            android:text="Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/txtTaskName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStatus"/>
    <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="4dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="SMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="4dp"/>
    <Button
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Task Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTaskName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="viewStart"/>
    <TextView
            android:layout_width="353dp"
            android:layout_height="112dp"
            android:id="@+id/txtInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="328dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="375dp"
            android:layout_height="121dp"
            android:id="@+id/txtAddress"
            app:layout_constraintStart_toStartOf="@+id/lblAddres"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lblAddres"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtInfo" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Status: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtStatus" app:layout_constraintStart_toStartOf="@+id/txtTaskName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTaskName"/>
    <TextView
            android:text="Contact No: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtContact" app:layout_constraintStart_toStartOf="@+id/txtEndTime"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEndTime"/>
</android.support.constraint.ConstraintLayout>