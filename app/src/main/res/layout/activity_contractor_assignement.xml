<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContractorAssignement">

    <Button android:id="@+id/btnAccept" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" tools:text="Accept" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/btnDecline" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" tools:text="Decline" android:layout_toEndOf="@+id/btnAccept"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:layout_above="@id/btnAccept" android:id="@+id/lvAssignments"/>
</RelativeLayout>