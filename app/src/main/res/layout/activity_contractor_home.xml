<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContractorHome">

    <Button
            android:text="Logout"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:id="@+id/btnLogout"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnUnavailability"
            app:layout_constraintEnd_toEndOf="@+id/btnUnavailability"
            app:layout_constraintStart_toStartOf="@+id/btnUnavailability"/>
    <Button
            android:text="Assignments"
            android:layout_width="348dp"
            android:layout_height="54dp"
            android:id="@+id/btnAssignments" android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Unavailabilitys"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:id="@+id/btnUnavailability" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAssignments"
            app:layout_constraintStart_toStartOf="@+id/btnAssignments"
            app:layout_constraintEnd_toEndOf="@+id/btnAssignments"/>
    <ImageView
            android:src="@mipmap/bitheaderlogo"
            android:layout_width="368dp"
            android:layout_height="115dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>